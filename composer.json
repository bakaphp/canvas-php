{
    "name": "bakaphp/canvas-sdk-php",
    "type": "library",
    "description": "A PHP client library for accessing Canvas APIs",
    "homepage": "https://github.com/bakaphp/canvas-sdk-php",
    "license": "MIT",
    "authors": [
        {
          "name": "Canvas team and contributors",
          "homepage": "https://github.com/bakaphp/canvas-sdk-php/contributors"
        }
      ],
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Canvas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Canvas\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
